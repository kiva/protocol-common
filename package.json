{
  "name": "protocol-common",
  "version": "1.0.1",
  "description": "Common code for kiva protocol webservices",
  "license": "Apache-2.0",
  "type": "module",
  "homepage": "https://github.com/kiva/protocol-common#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kiva/protocol-common.git",
    "directory": ""
  },
  "keywords": [
    "kiva",
    "protocol",
    "SSI",
    "hyperledger"
  ],
  "author": "protocol-services",
  "main": "dist/main.js",
  "types": "main.d.ts",
  "files": [
    "*"
  ],
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "scripts": {
    "build": "rm -rf dist && tsc",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "lint:fix": "tslint -p tsconfig.json -c tslint.json --fix",
    "test": "node -r dotenv/config node_modules/.bin/jest --runInBand",
    "setup": "npm link"
  },
  "dependencies": {
    "@nestjs/axios": "^0.0.3",
    "@nestjs/common": "^8.2.0",
    "@nestjs/core": "^8.2.0",
    "@nestjs/platform-express": "^8.2.0",
    "axios": "^0.24.0",
    "class-transformer": "^0.4.0",
    "class-validator": "^0.13.1",
    "cls-hooked": "^4.2.2",
    "crypto-js": "^4.1.1",
    "crypto-random-string": "^4.0.0",
    "dd-trace": "^1.5.1",
    "dotenv": "^10.0.0",
    "express-opentracing": "^0.1.1",
    "jaeger-client": "^3.19.0",
    "opentracing": "^0.14.5",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.4.0",
    "typescript": "^4.4.4",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@nestjs/testing": "^8.2.0",
    "@types/jest": "^27.0.2",
    "@types/supertest": "^2.0.11",
    "supertest": "^6.1.6",
    "jest": "^27.3.1",
    "prettier": "^2.4.1",
    "ts-jest": "^27.0.7",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0"
  },
  "jest": {
    "globals": {
      "factories": {}
    },
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "test",
    "testRegex": ".(e2e-spec|spec).ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
