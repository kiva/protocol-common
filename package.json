{
  "name": "protocol-common",
  "version": "0.1.23",
  "description": "Common code for kiva protocol webservices",
  "license": "Apache-2.0",
  "type": "commonjs",
  "homepage": "https://github.com/kiva/protocol-common#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kiva/protocol-common.git",
    "directory": ""
  },
  "keywords": [
    "kiva",
    "protocol",
    "SSI",
    "hyperledger"
  ],
  "author": "protocol-services",
  "main": "dist/main.js",
  "types": "main.d.ts",
  "files": [
    "*"
  ],
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "scripts": {
    "build": "rm -rf dist && tsc",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "lint:fix": "tslint -p tsconfig.json -c tslint.json --fix",
    "test": "node -r dotenv/config node_modules/.bin/jest --runInBand",
    "setup": "npm link"
  },
  "dependencies": {
    "@nestjs/common": "^7.4.2",
    "@nestjs/core": "^7.4.2",
    "@nestjs/platform-express": "^7.4.2",
    "axios": "^0.21.0",
    "class-validator": "^0.12.2",
    "cls-hooked": "^4.2.2",
    "crypto-js": "^4.0.0",
    "dd-trace": "^0.24.0",
    "dotenv": "^8.2.0",
    "express-opentracing": "^0.1.1",
    "jaeger-client": "^3.18.0",
    "opentracing": "^0.14.4",
    "pg": "^8.3.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^6.6.2",
    "supertest": "^4.0.2",
    "typescript": "^3.9.7",
    "winston-loggly-bulk": "^3.1.0"
  },
  "devDependencies": {
    "@nestjs/testing": "^7.4.2",
    "@types/jest": "^25.2.3",
    "@types/supertest": "^2.0.10",
    "jest": "^25.5.4",
    "prettier": "^2.0.5",
    "ts-jest": "^25.5.1",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0"
  },
  "jest": {
    "globals": {
      "factories": {}
    },
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "test",
    "testRegex": ".e2e-spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
